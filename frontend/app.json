{
  "expo": {
    "name": "MedControl",
    "slug": "medcontrol",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "medcontrol",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "App inteligente de controle de medicamentos com alarmes e gestão de estoque",
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Precisamos de acesso à câmera para fotografar receitas e caixas de medicamentos",
        "NSPhotoLibraryUsageDescription": "Precisamos de acesso à galeria para selecionar fotos de receitas e medicamentos"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#4A90E2"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#4A90E2"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
